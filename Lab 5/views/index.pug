doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/styles.css", type="text/css")
    title Todo List
  body
    .container
      h1 Todo List
      ul.todo-list
        each todo in todos
          li.todo-item
            .todo-title= todo.title
            .todo-status= todo.status

